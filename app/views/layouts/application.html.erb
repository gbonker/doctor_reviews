<!DOCTYPE html>
<html>
<head>
  <title>DoctorReviews</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap.css">
	<link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/css/bootstrap-theme.css">
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top" role="navigation">
  <div class="container">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="/">Doctor Reviews</a>
    </div>
    <div class="collapse navbar-collapse">
      <ul class="nav navbar-nav">
        <li class="dropdown">
          <a class="dropdown-toggle" data-toggle="dropdown" href="/doctors">Doctors
          <span class="caret"></span></a>
          <ul class="dropdown-menu">
            <li><a href="/doctors">See all doctors</a></li>
            <li><a href="/doctors/new">New Doctor</a></li>
            <li><a href="#">Dropdown Menu Item</a></li>
            <li><a href="#">Dropdown Menu Item</a></li>
          </ul>
        </li>

        <li><a href="/doctors">All Doctors</a></li>
        <li><a href="#">Menu Item</a></li>
        <li><a href="#">Menu Item</a></li>
      </ul>
    </div>
  </div>
</nav>

<div class="container">
  <%= yield %>
</div>


<footer>
  <div class="container">
    <div class="row">
      <div class="col-sm-2">
        <h5>CareDash</h5>
        <p><%= link_to "Home", home_path %></p>
        <p><%= link_to "About", "#" %></p>
        <p><%= link_to "Contact", "#" %></p>
        <p><%= link_to "Write a Review", "#" %></p>
      </div>
      <div class="col-sm-2">
        <h5>Specialists</h5>
        <p><%= link_to "Primary Care Physicians", home_path %></p>
        <p><%= link_to "Pediatricians", "#" %></p>
        <p><%= link_to "Optomatrists", "#" %></p>
        <p><%= link_to "Dentists", "#" %></p>
      </div>
      <div class="col-sm-8">
        <h5>Follow Us</h5>
        <%= link_to "https://www.facebook.com/caredash/", target: "_blank", style: "font-size: 32px;" do %>
          <i class="fa fa-facebook-square"></i>
        <% end %>
        <%= link_to "https://twitter.com/caredash", target: "_blank", style: "font-size: 32px;" do %>
          <i class="fa fa-twitter-square"></i>
        <% end %>
        <%= link_to "https://www.instagram.com/caredash/", target: "_blank", style: "font-size: 32px;" do %>
          <i class="fa fa-instagram"></i>
        <% end %>
        <%= link_to "https://www.pinterest.com/caredash/", target: "_blank", style: "font-size: 32px;" do %>
          <i class="fa fa-pinterest-square"></i>
        <% end %>
      </div>
    </div>

    Copyright 2017 CareDash
  </div>
</footer>
<script src="//maxcdn.bootstrapcdn.com/bootstrap/3.0.3/js/bootstrap.js"></script>

</body>
</html>
